---
import { Button, buttonVariants } from "@/components/ui/button"
import { cn } from "@/lib/utils"
import AnimatedBG from "./animated-bg"
import AnimatedStar from "./animated-star"
import { Image } from "astro:assets";
import Overview from "../../../public/overview.png"
---
<header class="relative mt-24 flex flex-col items-center gap-y-6 break-keep md:mt-32 md:gap-y-8">
  <AnimatedBG client:load/>
  <h1 class="text-center text-4xl font-bold md:text-5xl lg:text-6xl">
    Table viewer for modern developers
  </h1>
  <p class="text-muted-foreground text-center md:text-lg lg:text-xl">
    Database browsing experience like never before
  </p>
  <div class="flex items-center gap-x-7">
    <Button id="download-btn" className="font-semi">
      Download Now
    </Button>
    <a
      href="https://github.com/kareemmahlees/tablex"
      target="_blank"
      rel="noreferrer"
      class={cn(
        buttonVariants({
          variant: "secondary"
        }),
        "hover:bg-secondary group relative"
      )}
    >
      <Image alt="github icon" src="https://cdn.simpleicons.org/github/white" inferSize={true}  class="h-5 w-5" />
      <AnimatedStar client:load/>
    </a>
  </div>
  <Image
    src={Overview}
    alt="overview"
    aria-hidden
    class="mt-5 w-[400px] rounded-sm brightness-[80%] [mask-image:linear-gradient(black,gray,transparent_75%)] md:w-[600px] lg:w-[850px]"
  />
</header>

<script>
  document.getElementById("download-btn")?.addEventListener("click",()=>{
            document
              .getElementById("download")
              ?.scrollIntoView({ block: "center" })
  })
</script>